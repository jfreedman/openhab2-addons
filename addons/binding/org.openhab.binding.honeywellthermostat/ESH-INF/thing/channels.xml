<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="honeywellmytotalconnectcomfort"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<channel-type id="currentTemperature">
		<item-type>Number</item-type>
		<label>Current Temperature</label>
		<description>Current indoor temperature</description>
		<state pattern="%d °F" readOnly="true"/>
	</channel-type>
	<channel-type id="currentHumidity">
		<item-type>Number</item-type>
		<label>Current Indoor Humidity</label>
		<description>Current indoor humidity</description>
		<state pattern="%d %%" readOnly="true"/>
	</channel-type>
	<channel-type id="systemMode">
		<item-type>String</item-type>
		<label>System Mode</label>
		<state>
			<options>
				<option value="HEAT">Heat</option>
				<option value="OFF">Off</option>
				<option value="COOL">Cool</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="heatSetPoint">
		<item-type>Number</item-type>
		<label>Heat Set At</label>
		<state min="40" max="90" step="1" pattern="%d °F"/>
	</channel-type>
	<channel-type id="coolSetPoint">
		<item-type>Number</item-type>
		<label>Cool Set At</label>
		<state min="50" max="99" step="1" pattern="%d °F"/>
	</channel-type>
	<channel-type id="FanMode">
		<item-type>String</item-type>
		<label>Fan mode</label>
		<state>
			<options>
				<option value="AUTO">Auto</option>
				<option value="ON">On</option>
				<option value="CIRCULATE">Circulate</option>
				<option value="SCHEDULE">Schedule</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="holdUntil" advanced="true">
		<item-type>DateTime</item-type>
		<label>Hold Temp Until</label>
		<description>Thermostat goes back to schedule after this time if schedule mode is set to temp hold.</description>
	</channel-type>
	<channel-type id="scheduleMode">
		<item-type>String</item-type>
		<label>Schedule mode</label>
		<state>
			<options>
				<option value="SCHEDULE">Use Schedule</option>
				<option value="TEMP_HOLD">Temp Hold</option>
				<option value="PERM_HOLD">Permanent Hold</option>
			</options>
		</state>
	</channel-type>
</thing:thing-descriptions>
